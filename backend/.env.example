# =========================
# FoodieFly Backend (.env)
# Copy this file to `.env` for local dev.
# For Render: set these in Service -> Environment (do NOT commit secrets)
# =========================

# Server
PORT=3000

# Database
MONGO_URI=

# Auth
JWT_SECRET=

# CORS (optional if hardcoded)
CLIENT_URL=https://foodiefly-igaw.onrender.com

# Cloudinary (if used)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Razorpay (if used)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ---------- OTP Email (recommended: SMTP provider) ----------
MAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Optional SMTP timeouts (ms)
SMTP_CONNECTION_TIMEOUT=10000
SMTP_GREETING_TIMEOUT=10000
SMTP_SOCKET_TIMEOUT=20000

# ---------- OTP Email (fallback: Gmail) ----------
# Use a Gmail APP PASSWORD here, not your normal Gmail password
EMAIL=
PASS=
GMAIL_SMTP_PORT=587

# Health endpoint key (protects /api/health/mail)
HEALTH_KEY=
